<!DOCTYPE html>
<!-- Coding by CodingLab || www.codinglabweb.com -->
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Website with Login & Registration Form</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <!-- Unicons -->
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css" />
  </head>
  <body style="height: 100%; width: 100%; background-color: #190074; background-image: linear-gradient(319deg, #663dff 0%, #51007a 37%, #7a094f 100%);
  ">
    <!-- Header -->
    <header class="header">
      <nav class="nav">
        <a href="#" class="nav_logo">BlogLab</a>

        <ul class="nav_items">
          <li class="nav_item">
            <a href="/" class="nav_link">Home</a>
            <a href="/profile" class="nav_link">Profile</a>
            <a href="/blog" class="nav_link">Blogs</a>
          </li>
        </ul>

      </nav>
    </header>

    <!-- Home -->
    <section class="home">

    <div style="background-color: transparent; border: 2px solid transparent;  height: 100%; display: block;">
        
               <div class="card-container" style=" width: 90%; margin-top: 50px; margin-left: 70px; height: 550px; border: 2px solid transparent; padding: 10px; display: flex; flex-wrap: wrap;">

                <% post.forEach((val) => { %>
                    <div class="cards" style="box-shadow: 0 15px 25px rgba(162, 0, 162, 0.1); backdrop-filter: blur(14px); background-color: rgba(74, 0, 74, 0.567);
                      height: 350px; width: 250px; margin-bottom: 10px; overflow: scroll; margin-left: 20px;  margin-top: 20px;  border-radius: 20px;">
                    <div style="height: 150px; border-radius: 10px; overflow: hidden; margin-bottom: 10px; width: 200px; background-color: transparent; transform: translate(12%, 10%);">
                      <img style="width: 100%; height: 100%; background-position: center; background-repeat: no-repeat; background-size: cover;" src="<%= val.image %>" alt="" srcset="">
                    </div>
                    <h1 style="margin-top: 25px; font-size: 30px; color: white; margin-left: 22px;"><%= val.username %></h1>
                    <p style="font-size: 20px; color: white; margin-left: 22px;"><%= val.text %></p>
                    <div style="color: white; margin-top: 40px; margin-left: 20px;">
                        
                    </div>
                  </div>
                <% }); %>
            



        </div>
    </div>
    

    </section>


    <script src="/javascripts/script.js"></script>
  </body>
</html>
